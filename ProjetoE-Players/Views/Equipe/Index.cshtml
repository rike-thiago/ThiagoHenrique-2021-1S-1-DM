@model Equipe
<script src="https://kit.fontawesome.com/429ce419a2.js" crossorigin="anonymous"></script>
@{
    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    
    <div class="campo">
        <label>ID</label>
        <input type="text" name="IdEquipe"/>
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome">
    </div>

    <div class="campo">
        <label>Imagem</label>
        <input type="file" name="Imagem">
    </div>
    
    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" width="50px"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><i class="fas fa-trash"></i></a></td>
            </tr>
        }
    </tbody>

</table>